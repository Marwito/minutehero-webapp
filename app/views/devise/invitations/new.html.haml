- content_for(:title, "Send invitations to friends and contacts")
- breadcrumb :devise
.row
  .middle-box.text-center.loginscreen.animated.fadeInDown
    = simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f|
      = devise_error_messages!
      = f.input :first_name
      = f.input :last_name
      - resource.class.invite_key_fields.each do |field|
        = f.input field, required: true
      %input.btn.btn-primary{"data-disable-with" => "Send an invitation", :name => "commit", :type => "submit", :value => "Send an invitation"}/
      